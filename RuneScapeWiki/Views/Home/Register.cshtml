@model RuneScapeWiki.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RunescapeWiki</title>
</head>
<body class="Background">
    <div>
        <form asp-action="SignUp" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="imgcontainer">
                <img src="../images/Logo.png" alt="Avatar" class="avatar">
            </div>
            <div class="containerInlog">
                <div>
                    <input asp-for="Username" class="form-control" placeholder="Enter Username"/>
                    <span asp-validation-for="Username" ></span>
                </div>

                <div>
                    <input asp-for="Email" class="form-control" placeholder="Enter E-mail"/>
                    <span asp-validation-for="Email" ></span>
                </div>

                <div>
                    <input asp-for="Password" class="form-control" placeholder="Enter Password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
</body>
</html>
