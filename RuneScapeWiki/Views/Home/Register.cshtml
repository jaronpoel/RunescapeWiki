@model RuneScapeWiki.Models.RegisterViewModel
@{
    ViewBag.Title = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RunescapeWiki</title>
</head>
<body class="Background">
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="imgcontainer">
                <img src="../images/Logo.png" alt="Avatar" class="avatar">
            </div>
            <div class="containerInlog">
                <div>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" placeholder="Enter Username"></span>
                </div>

                <div>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" placeholder="Enter E-mail"></span>
                </div>

                <div>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="mainBtn">Register</button>
            </div>
        </form>
    </div>
</body>
</html>
