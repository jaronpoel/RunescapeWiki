@model RuneScapeWiki.Models.LoginViewModel
@{
    ViewBag.Title = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RunescapeWiki</title>
</head>
<body class="Background">
    <div>

        <form asp-action="UserLogin" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="imgcontainer">
                <img src="../images/Logo.png" alt="Avatar" class="avatar">
            </div>
            <div class="containerInlog">
                <div>
                    <input asp-for="UserName" class="Inlog" placeholder="Enter Username"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div>
                    <input asp-for="Password" class="Inlog" placeholder="Enter Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit">Log in</button>
                    <br />
                    <button asp-action="Register" asp-controller="Home" class="NewAccountButton">New Account</button>
                </div>
            </div>
        </form>
        
    </div>
</body>
</html>
