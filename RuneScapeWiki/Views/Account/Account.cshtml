@using Models;
@model Models.Account

@{
    ViewBag.Title = "Account";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RunescapeWiki</title>
</head>
<body class="BackgroundTekst">
    <ul>
        <h1 class="Menu">
            <li><a @Html.ActionLink("List", "List", "List")</a></li>
            <li><a class="active" @Html.ActionLink("Account", "Account", "Account")</a></li>
            <li><a @Html.ActionLink("Stats", "Stats", "Stats")</a></li>
            <li><a @Html.ActionLink("Monster", "Monster", "Monster")</a></li>
        </h1>
    </ul>
    <div class="ContainerContent">
        <div class="BackdropTop"></div>
        <div class="Backdrop">
            <h1>Account: @ViewBag.Account.Name</h1>
            <table>
                <tbody>
                    <tr>
                        <td><h1>Strength:</h1></td>
                        <td><h1>@ViewBag.Account.Strength</h1></td>
                    </tr>
                    <tr>
                        <td><h1>Attack:</h1></td>
                        <td><h1>@ViewBag.Account.Attack</h1></td>
                    </tr>
                    <tr>
                        <td><h1>Defence:</h1></td>
                        <td><h1>@ViewBag.Account.Defence</h1></td>
                    </tr>
                    <tr>
                        <td><h1>Slayer:</h1></td>
                        <td><h1>@ViewBag.Account.Slayer</h1></td>
                    </tr>
                </tbody>
            </table>

            <form method="post" asp-controller="NewStats" asp-action="NewStats">
                <button class="NewStats" type="submit">Update Stats</button>
            </form>
        </div>
        <div class="BackdropBot"></div>
    </div>
</body>
</html>
